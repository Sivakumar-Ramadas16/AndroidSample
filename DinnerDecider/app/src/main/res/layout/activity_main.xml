<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" >

    <TextView
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:text="@string/FoodName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/FoodTxt"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            android:background="@android:color/black" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:textAlignment="center"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/dinner_plate"
            android:id="@+id/ivDinnerPlate"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:scaleType="centerCrop"
            android:contentDescription="@string/DinnerPlate" style="@style/Base.Widget.AppCompat.Button.Borderless"/>
    <Button
            android:text="DECIDE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDecide" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/colorPrimary"
            android:fontFamily="@font/muli_semibold"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/AddFoodText"
            android:hint="Add Food..." app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnDecide" android:layout_marginBottom="170dp"
            android:autofillHints=""/>
    <Button
            android:text="Add Food"
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="546dp"
            app:layout_constraintTop_toBottomOf="@+id/AddFoodText"
            android:layout_marginTop="10dp"
            android:id="@+id/btnAddFood"
            style="@style/Widget.AppCompat.Button.Borderless" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/background_light" android:background="@color/colorPrimaryDark"/>

</androidx.constraintlayout.widget.ConstraintLayout>